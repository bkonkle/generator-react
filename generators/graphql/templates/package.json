{
  "name": "<%= name %>",
  "version": "1.0.0",
  "description": "<%= description %>",
  "repository": {
    "type": "git",
    "url": "<%= repo %>"
  },
  "author": "<%= author %>",
  "license": "UNLICENSED",
  "keywords": [
<% keywords.forEach(function (keyword, i) { -%>
    "<%= keyword %>"<% if (i !== keywords.length - 1) { %>,<% } %>
<% }) -%>
  ],
  "scripts": {
    "check.types": "tsc --pretty --noEmit --skipLibCheck",
    "db.migrate": "[ -f \".env\" ] && source .env; knex migrate:latest",
    "db.functions": "[ -f \".env\" ] && source .env; cat sql/*.sql | psql -1 $DATABASE_URL -f -",
    "db.reset": "dropdb <%= name %> && createdb <%= name %> -O <%= name %>_root && yarn db.migrate && yarn db.functions",
    "dev": "yarn dev.watch.debug",
    "dev.run": "NODE_ENV=development ts-node --transpile-only src/index.ts",
    "dev.debug": "DEBUG=<%= name %>-api:*,graphile-build:* yarn dev.run",
    "dev.watch": "nodemon --exec yarn dev.run",
    "dev.watch.debug": "DEBUG=<%= name %>-api:*,graphile-build:* yarn dev.watch",
    "lint": "tslint --format stylish --project tsconfig.json",
    "start": "yarn db.migrate && yarn db.functions && ts-node --transpile-only src/index.ts",
    "test.watch": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    <% if (useAuth0) { %>"express-jwt": "^5.3.1",
    <% } %>"express-noop": "^1.1.0",
    "graphile-utils": "^4.3.1",
    "graphql": "14.2.0",
    "graphql-playground-html": "^1.6.13",
    "graphql-playground-middleware-express": "^1.7.12",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.2.2",
    <% if (useAuth0) { %>"jwks-rsa": "^1.4.0",
      <% } %>"knex": "0.16.3",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "parse-database-url": "^0.3.0",
    "pg": "^7.9.0",
    "pg-sql2": "^2.2.1",
    "postgraphile": "^4.3.3",
    "ramda": "^0.26.1",
    "ts-node": "^8.0.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.12.0",
    "@types/ramda": "^0.26.5",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "ts-essentials": "^2.0.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-microsoft-contrib": "^6.1.0",
    "tslint-react": "^4.0.0",
    "typescript": "3.4.1"
  },
  "resolutions": {
    "graphql": "14.2.0"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint",
        "git add"
      ]
    },
    "ignore": [
      "lib/**/*"
    ]
  }
}
